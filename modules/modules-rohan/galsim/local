#%Module########################################################################
# vim: set filetype=tcl :

module-whatis	"galsim"
conflict galsim

eval set  [ array get env HOME ]

set GALSIM_DIR $HOME/exports/galsim-local

prepend-path PYTHONPATH $GALSIM_DIR/lib/python2.7/site-packages/

setenv GALSIM_DIR $GALSIM_DIR

