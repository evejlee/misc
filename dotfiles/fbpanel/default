Global {
    edge = top
    allign = right
    margin = 0
    widthtype = percent
    width = 15
    height = 16
    transparent = false
    tintcolor = black
    alpha = 255
    setdocktype = true
    setpartialstrut = true
    autohide = false
    heightWhenHidden = 2
}

Plugin {
    type = space
    config {
        size = 2
    }
}


