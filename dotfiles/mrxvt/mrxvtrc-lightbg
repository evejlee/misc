mrxvt.macro.Alt+f: ToggleFullscreen

# in addition to ctrl+shift+t, this will also open a new tab
mrxvt.macro.Alt+t: NewTab
# next tab
#mrxvt.macro.Alt+l: MoveTab +1
# previous tab
#mrxvt.macro.Alt+h: MoveTab -1


# get rid of annoying resize font combination I'm always hitting accidentally
# just remap them to something harmless: scroll to bottom
Mrxvt.macro.Ctrl+equal: Scroll +1000000
Mrxvt.macro.Ctrl+minus: Scroll +1000000
Mrxvt.macro.Ctrl+Shift+plus: Copy
Mrxvt.macro.Ctrl+Shift+underscore: Copy

# now use alt for font changing:
mrxvt.macro.Alt+equal: ResizeFont +1
mrxvt.macro.Alt+minus: ResizeFont -1


