
!
! xterm configuration
!

customization: -color

! This means never use overstriking for bold
!xterm*boldMode: false
xterm*allowBoldFonts: false

!xterm*faceName: Terminus:pixelsize=12

! This means just display a different color, dont use the bold font
!xterm*colorBDMode: true

! will use these if freetype monaco not available
!xterm*font: fixed
!xterm*boldFont: fixed
!xterm*font: -*-proggytiny-*-*-*-*-*-*-*-*-*-*-iso8859-*
!xterm*font: -windows-proggytiny-medium-r-normal--10-80-96-96-c-60-iso8859-1
!xterm*Xft*antialias:  false

!XTerm*renderFont: true
!XTerm*faceName: ProggyTiny
!XTerm*faceSize: 10 

!xterm*faceName: Monaco:pixelsize=10

! dont include the newline when triple clicking
xterm*cutNewLine: true

! dumb fix for getting the copy into clipboard as well as primary
! you can still use mouse paste in the xterm but paste ctrl-v or whatever
! will work in other apps
! I would rather have a keyboard shortcut to get things into the clipboard, 
! but I dont know how
xterm*VT100.translations: #override <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)


!xterm.reverseVideo: true
